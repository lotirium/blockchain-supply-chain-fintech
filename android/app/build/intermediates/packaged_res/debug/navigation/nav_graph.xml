<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_login">

    <!-- Authentication -->
    <fragment
        android:id="@+id/navigation_login"
        android:name="com.shipment.app.fragments.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/navigation_register" />
        <action
            android:id="@+id/action_login_to_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_register"
        android:name="com.shipment.app.fragments.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_register_to_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_login"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Main Navigation -->
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.shipment.app.fragments.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profile_to_orders"
            app:destination="@id/navigation_orders" />
    </fragment>

    <!-- Orders -->
    <fragment
        android:id="@+id/navigation_orders"
        android:name="com.shipment.app.fragments.OrdersFragment"
        android:label="Orders">
        <action
            android:id="@+id/action_orders_to_order_details"
            app:destination="@id/navigation_order_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_order_details"
        android:name="com.shipment.app.fragments.OrderDetailsFragment"
        android:label="Order Details">
        <argument
            android:name="orderId"
            app:argType="string" />
        <action
            android:id="@+id/action_order_details_to_qr_scanner"
            app:destination="@id/navigation_qr_scanner" />
    </fragment>

    <!-- QR Scanner -->
    <fragment
        android:id="@+id/navigation_qr_scanner"
        android:name="com.shipment.app.fragments.QRScannerFragment"
        android:label="QR Scanner">
        <argument
            android:name="orderId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_qr_scanner_to_product_verification"
            app:destination="@id/navigation_product_verification" />
    </fragment>

    <!-- Product Verification -->
    <fragment
        android:id="@+id/navigation_product_verification"
        android:name="com.shipment.app.fragments.ProductVerificationFragment"
        android:label="Product Verification">
        <argument
            android:name="qrData"
            app:argType="string" />
        <action
            android:id="@+id/action_product_verification_to_qr_scanner"
            app:destination="@id/navigation_qr_scanner"
            app:popUpTo="@id/navigation_qr_scanner"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>