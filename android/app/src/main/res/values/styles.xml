<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Color scheme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorError">@color/error</item>
        
        <!-- System bars -->
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.App.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.App.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.App.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.App.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.App.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.App.BodySmall</item>
        
        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.App.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">-0.0125</item>
        <item name="android:fontFamily">@string/font_family_display</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.App.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">-0.0089</item>
        <item name="android:fontFamily">@string/font_family_display</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.App.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.0067</item>
        <item name="android:fontFamily">@string/font_family_display</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0089</item>
        <item name="android:fontFamily">@string/font_family_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0178</item>
        <item name="android:fontFamily">@string/font_family_body</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.43</item>
    </style>

    <style name="TextAppearance.App.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.0333</item>
        <item name="android:fontFamily">@string/font_family_body</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.BodyLarge</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <!-- Custom Text Field Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.BodySmall</item>
        <item name="errorTextAppearance">@style/TextAppearance.App.BodySmall</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_border</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemRippleColor">@color/ripple</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:background">@color/surface</item>
        <item name="elevation">16dp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.App.BodyMedium</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.App.BodyMedium</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/surface</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.HeadlineSmall</item>
        <item name="elevation">4dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">16dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <!-- List Item Styles -->
    <style name="Widget.App.ListItem" parent="Widget.Material3.CardView.Elevated">
        <item name="android:background">@color/surface</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">1dp</item>
    </style>

    <!-- Progress Indicator Style -->
    <style name="Widget.App.ProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/surface_variant</item>
        <item name="trackThickness">4dp</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/divider</item>
        <item name="android:textAppearance">@style/TextAppearance.App.BodySmall</item>
        <item name="chipCornerRadius">8dp</item>
    </style>
</resources>