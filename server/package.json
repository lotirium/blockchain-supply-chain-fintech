{
  "name": "nft-marketplace-server",
  "version": "1.0.0",
  "description": "Backend server for NFT marketplace",
  "main": "src/app.mjs",
  "type": "module",
  "scripts": {
    "start": "node src/app.mjs",
    "dev": "nodemon --experimental-json-modules src/app.mjs",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,mjs,json",
    "ignore": [
      "src/**/*.test.js",
      "src/**/*.spec.js"
    ],
    "exec": "node --experimental-json-modules"
  },
  "dependencies": {
    "@chainsafe/libp2p-noise": "^15.0.0",
    "@chainsafe/libp2p-yamux": "^6.0.0",
    "@helia/unixfs": "^3.0.0",
    "@ipshipyard/libp2p-auto-tls": "^1.0.0",
    "@libp2p/bootstrap": "^10.0.0",
    "@libp2p/websockets": "^8.0.0",
    "bcryptjs": "^2.4.3",
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "ethers": "^6.13.5",
    "express": "^4.18.2",
    "express-queue": "^0.0.13",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helia": "^4.0.1",
    "jsonwebtoken": "^9.0.0",
    "libp2p": "^1.0.0",
    "multer": "^1.4.5-lts.1",
    "multiformats": "^13.0.0",
    "qrcode": "^1.5.4",
    "sequelize": "^6.28.0",
    "uint8arrays": "^5.0.0"
  },
  "devDependencies": {
    "dotenv": "^16.4.7",
    "jest": "^29.3.1",
    "nodemon": "^3.1.9",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize-cli": "^6.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
